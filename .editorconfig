# EditorConfig for CIMEIKA UNIFIED
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Frontend: JavaScript/TypeScript
[*.{js,jsx,ts,tsx,json,css,scss,html}]
indent_style = space
indent_size = 2

# Backend: Python
[*.py]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefiles
[Makefile]
indent_style = tab
